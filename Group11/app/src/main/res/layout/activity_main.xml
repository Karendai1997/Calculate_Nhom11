<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/mauNen0"
    tools:context=".MainActivity">

    <RelativeLayout
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="16dp"
        >

        <EditText
            android:id="@+id/edt_input"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Input number"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:inputType="text" />

        <TextView
            android:id="@+id/tv_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/edt_input"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:text=""
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>
    <LinearLayout
        android:background="@color/colorPrimaryDark"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="450dp">

        <LinearLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="4">
            <Button

                android:id="@+id/btnClearAll"
                android:background="@drawable/button_3state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:text="CE"/>

            <Button

                android:id="@+id/btnOpen"
                android:background="@drawable/button_3state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:text="("/>
            <Button

                android:id="@+id/btnClose"
                android:background="@drawable/button_3state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:text=")"/>
            <Button

                android:id="@+id/btnChia"
                android:background="@drawable/custom_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:text="/"/>

        </LinearLayout>
        <LinearLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="4">

            <Button
                android:id="@+id/btnNumber1"
                android:background="@drawable/button_3state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:text="1" />

            <Button
                android:id="@+id/btnNumber2"
                android:background="@drawable/button_3state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:text="2" />

            <Button
                android:id="@+id/btnNumber3"
                android:background="@drawable/button_3state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:text="3" />

            <Button
                android:id="@+id/btnCong"
                android:background="@drawable/custom_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:text="+" />


        </LinearLayout>
        <LinearLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="4">

            <Button
                android:id="@+id/btnNumber4"
                android:background="@drawable/button_3state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:layout_weight="1"
                android:text="4" />

            <Button
                android:id="@+id/btnNumber5"
                android:background="@drawable/button_3state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:layout_weight="1"
                android:text="5" />

            <Button
                android:id="@+id/btnNumber6"
                android:background="@drawable/button_3state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:layout_weight="1"
                android:text="6" />

            <Button
                android:id="@+id/btnTru"
                android:background="@drawable/custom_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:layout_weight="1"
                android:text="-" />

        </LinearLayout>
        <LinearLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="4">

            <Button
                android:id="@+id/btnNumber7"
                android:background="@drawable/button_3state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:layout_weight="1"
                android:text="7" />

            <Button
                android:id="@+id/btnNumber8"
                android:background="@drawable/button_3state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:layout_weight="1"
                android:text="8" />

            <Button
                android:id="@+id/btnNumber9"
                android:background="@drawable/button_3state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:layout_weight="1"
                android:text="9" />

            <Button
                android:id="@+id/btnNhan"
                android:background="@drawable/custom_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:layout_weight="1"
                android:text="*" />


        </LinearLayout>
        <LinearLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="4">

            <Button
                android:id="@+id/btnNumber0"
                android:background="@drawable/button_3state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:layout_weight="1"
                android:text="0" />

            <Button
                android:id="@+id/btnPoint"
                android:background="@drawable/button_3state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:layout_weight="1"
                android:text="." />

            <Button
                android:id="@+id/btnClear"
                android:background="@drawable/button_3state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:layout_weight="1"
                android:text="C" />
            <Button
                android:id="@+id/btnResult"
                android:background="@drawable/button_bang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:layout_weight="1"
                android:text="=" />
        </LinearLayout>


    </LinearLayout>













</LinearLayout>